        <TextBox HorizontalAlignment="Left" TabIndex="1" Margin="353,113,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" TabIndex="2"  Margin="353,149,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.507,0.592"/>
        <TextBox HorizontalAlignment="Left" TabIndex="3"  Margin="353,187,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" TabIndex="4"  Margin="353,228,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.507,1.962"/>
